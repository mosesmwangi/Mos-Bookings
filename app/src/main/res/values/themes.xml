<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MosBookings" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/primary_blue_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>
        
        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/accent_blue</item>
        <item name="colorSecondaryVariant">@color/primary_blue_dark</item>
        <item name="colorOnSecondary">@color/text_on_primary</item>
        
        <!-- Background Colors -->
        <item name="android:colorBackground">@color/background_primary</item>
        <item name="colorSurface">@color/background_card</item>
        <item name="colorOnBackground">@color/text_primary</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/primary_blue</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation Bar -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
    </style>

    <style name="Theme.MosBookings" parent="Base.Theme.MosBookings" />
    
    
    <!-- Active text style -->
    <style name="CustomBottomNavTextActive" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/primary_blue_dark</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- Inactive text style -->
    <style name="CustomBottomNavTextInactive" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <!-- Active indicator style -->
    <style name="CustomBottomNavIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/primary_blue_light</item>
        <item name="android:width">32dp</item>
        <item name="android:height">32dp</item>
    </style>
    
    <!-- Dialog Animation -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
    
    <!-- Admin Navigation Text Style -->
    <style name="AdminNavigationTextStyle" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/admin_text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- Admin Navigation View Style -->
    <style name="AdminBottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@drawable/admin_navigation_background</item>
        <item name="android:elevation">8dp</item>
        <item name="itemIconTint">@drawable/admin_navigation_selector</item>
        <item name="itemTextColor">@drawable/admin_navigation_selector</item>
        <item name="itemRippleColor">@color/admin_primary_light</item>
        <item name="itemActiveIndicatorStyle">@style/AdminActiveIndicator</item>
        <item name="itemTextAppearanceActive">@style/AdminNavigationTextActive</item>
        <item name="itemTextAppearanceInactive">@style/AdminNavigationTextInactive</item>
    </style>
    
    <!-- Admin Active Indicator -->
    <style name="AdminActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/admin_accent</item>
        <item name="android:width">40dp</item>
        <item name="android:height">40dp</item>
    </style>
    
    <!-- Admin Navigation Text Active -->
    <style name="AdminNavigationTextActive" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/admin_accent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- Admin Navigation Text Inactive -->
    <style name="AdminNavigationTextInactive" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/admin_text_secondary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Simple Admin Navigation Text Styles -->
    <style name="AdminNavTextActive" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FF5722</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="AdminNavTextInactive" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#757575</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>